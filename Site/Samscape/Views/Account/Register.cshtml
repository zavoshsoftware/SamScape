
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}

 
<section class="breadcrumb-area">
	<div class="container-fluid custom-container">
		<div class="row">
			<div class="col-xl-12">
				<div class="bc-inner">
					<p>
						<a href="/">قانون گستر  |</a>
						ثبت نام
					</p>
				</div>
			</div>
		</div>
	</div>
</section>


<div class="container">
	<div class="row">
		<div class="col-md-6 col-sm-10 offset-sm-1 col-xs-12  offset-md-3 login">
			<div class="login-header">
				ثبت نام در قانون گستر
			</div>
			<div class="login-form">
				@if (TempData["duplicateUser"] != null)
				{
						<p class="alert alert-danger" id="duplicateUser">@TempData["duplicateUser"]</p>
				}
				@using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "panel-body wrapper-lg", role = "form" }))
				{
						@Html.AntiForgeryToken()
						@Html.ValidationSummary(false)

						<div class="form-group">
							<label for="FullName">نام و نام خانوادگی</label>

							<div class="input-group mb-2">
								<div class="input-group-prepend">
									<div class="input-group-text">
										<i class="fa fa-user"></i>
									</div>
								</div>
								<input type="text" readonly
											 onfocus="this.removeAttribute('readonly');" class="form-control" id="FullName" name="FullName" placeholder="نام و نام خانوادگی">
							</div>
						</div>
						<div class="form-group">
							<label for="CellNumber">شماره موبایل</label>

							<div class="input-group mb-2">
								<div class="input-group-prepend">
									<div class="input-group-text">
										<i class="fa fa-mobile"></i>
									</div>
								</div>
								<input type="text" readonly
											 onfocus="this.removeAttribute('readonly');" class="form-control" id="CellNumber" name="CellNumber" placeholder="شماره موبایل">
							</div>
						</div>
						<div class="form-group">
							<label for="Password">کلمه عبور</label>

							<div class="input-group mb-2">
								<div class="input-group-prepend">
									<div class="input-group-text">
										<i class="fa fa-lock"></i>
									</div>
								</div>
								<input type="password" readonly onfocus="this.removeAttribute('readonly');" class="form-control" id="Password" name="Password" placeholder="کلمه عبور">
							</div>
						</div>
						<div class="form-group">
							<label for="RepeatPassword">تکرار کلمه عبور</label>

							<div class="input-group mb-2">
								<div class="input-group-prepend">
									<div class="input-group-text">
										<i class="fa fa-lock"></i>
									</div>
								</div>
								<input type="password" readonly onfocus="this.removeAttribute('readonly');" class="form-control" name="RepeatPassword" id="RepeatPassword" placeholder="کلمه عبور">
							</div>
						</div>

						<button type="submit" class="btn btn-savadimo-login">ثبت نام در قانون گستر</button>
				}
			</div>

		</div>
	</div>
	<div class="row">
		<div class="col-md-6 col-sm-10 offset-sm-1 col-xs-12  offset-md-3 login-footer">
			<label>قبلا در قانون گستر ثبت نام کرده اید؟</label> <a href="/login">وارد شوید</a>
		</div>
	</div>
</div>


