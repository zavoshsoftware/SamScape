@model ViewModels.ContactViewModel
@{
    ViewBag.Title = "تماس با ما";
    Layout = "~/Views/Shared/FrontEnd/_FrontEndLayout.cshtml";
}

<div class="breadcrumb_section bg_gray page-title-mini" style="background-image: url('../../images/banner2.jpg');">
    <div class="container">
        <!-- STRART CONTAINER -->
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="page-title">
                    <h1>تماس با ما</h1>
                </div>
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb justify-content-md-end">
                    <li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
                    <li class="breadcrumb-item active">تماس با ما</li>
                </ol>
            </div>
        </div>
    </div><!-- END CONTAINER-->
</div>

<div class="main_content">

    <!-- START SECTION CONTACT -->
    <div class="section pb_70">
        <div class="container">
            <div class="row">
                @foreach (var text in Model.Texts)
                {
                    <div class="col-xl-4 col-md-6">
                        <div class="contact_wrap contact_style3">
                            <div class="contact_icon">
                                <i class="@text.Summery"></i>
                            </div>
                            <div class="contact_text">
                                <span>@text.Title</span>
                                <p>@Html.Raw(text.Body)</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- END SECTION CONTACT -->
    <!-- START SECTION CONTACT -->
    <div class="section pt-0">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="heading_s1">
                        <h2>با ما در تماس باشید</h2>
                    </div>
                    <p class="leads">از طریق فرم زیر با ما در تماس باشید</p>
                    <div class="field_form">
                        <form method="post" name="enq">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <input required placeholder="نام و نام خانوادگی*" id="first-name" class="form-control" name="name" type="text">
                                </div>
                                <div class="form-group col-md-6">
                                    <input required placeholder="ایمیل*" id="email" class="form-control" name="email" type="email">
                                </div>
                               
                                <div class="form-group col-md-12">
                                    <textarea required placeholder="پیغام *" id="description" class="form-control" name="message" rows="4"></textarea>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" title="Submit Your Message!" class="btn btn-fill-out" id="submitButton" name="submit" value="Submit">ارسال</button>
                                </div>
                                <div class="col-md-12">
                                    <div id="alert-msg" class="alert-msg text-center"></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6 pt-2 pt-lg-0 mt-4 mt-lg-0">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d205798.96487115673!2d59.4393730430109!3d36.29754024505823!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3f6c911abe4131d7%3A0xc9c57e3a9318753b!2sMashhad%2C%20Razavi%20Khorasan%20Province%2C%20Iran!5e0!3m2!1sen!2s!4v1596694678924!5m2!1sen!2s" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>                </div>
            </div>
        </div>
    </div>
    <!-- END SECTION CONTACT -->
    
</div>