@model ViewModels.ContactViewModel
@{
    ViewBag.Title = "صادرات";
    Layout = "~/Views/Shared/FrontEnd/_FrontEndLayout.cshtml";
}

<div class="breadcrumb_section bg_gray page-title-mini" style="background-image: url('../../images/banner2.jpg');">
    <div class="container">
        <!-- STRART CONTAINER -->
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="page-title">
									<h1>صادرات</h1>
                </div>
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb justify-content-md-end">
                    <li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
										<li class="breadcrumb-item active">صادرات</li>
                </ol>
            </div>
        </div>
    </div><!-- END CONTAINER-->
</div>

<div class="main_content">
  
    <div class="section pt-70  pb_70">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="heading_s1">
                        <h2>با ما در تماس باشید</h2>
                    </div>
                    <p class="leads">از طریق فرم زیر با ما در تماس باشید</p>
                    <div class="field_form">
                        <form method="post" name="enq">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <input required placeholder="نام و نام خانوادگی*" id="first-name" class="form-control" name="name" type="text">
                                </div>
                                <div class="form-group col-md-6">
                                    <input required placeholder="ایمیل*" id="email" class="form-control" name="email" type="email">
                                </div>
                               
                                <div class="form-group col-md-12">
                                    <textarea required placeholder="پیغام *" id="description" class="form-control" name="message" rows="4"></textarea>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" title="Submit Your Message!" class="btn btn-fill-out" id="submitButton" name="submit" value="Submit">ارسال</button>
                                </div>
                                <div class="col-md-12">
                                    <div id="alert-msg" class="alert-msg text-center"></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
	            <div class="col-lg-6 pt-2 pt-lg-0 mt-4 mt-lg-0">
		            <p>
			            هلدینگ samscape در راستای تولید بدون کارخانه، بسته بندی و برندسازی محصولات برتر ایرانی و با هدف صادرات آن ها به کشورهای توسعه یافته و فرانچایز بین المللی، گامی هرچند کوچک در جهت ارتقا ارزش معدت ایران و شناسایی و معرفی محصولات فرآوری شده حاصل از خاک های معدنی و صنعتی بر می دارد.
		            </p>
								<p>هلدینگ samscape در زمینه برندسازی و صادرات و کلیه امور بازرگانی فعالیت های گسترده ای دارد</p>
	            </div>
            </div>
        </div>
    </div>
    <!-- END SECTION CONTACT -->
    
</div>