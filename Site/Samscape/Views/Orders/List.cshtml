@model ViewModels.OrderListViewModel
@{
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}

<div class="breadcrumb-area bg--white-6 pt--60 pb--70 pt-lg--40 pb-lg--50 pt-md--30 pb-md--40">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="page-title">لیست سفارشات</h1>
                <ul class="breadcrumb justify-content-center">
                    <li><a href="/">خانه</a></li>
                    <li class="current"><span>لیست سفارشات</span></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div id="content" class="main-content-wrapper">
    <div class="page-content-inner">
        <div class="container">
            <div class="row pt--80 pt-md--60 pt-sm--40 pb--80 pb-md--60 pb-sm--40">
                <div class="col-12">
                    <div class="user-dashboard-tab flex-column flex-md-row right-align">
                        <div class="user-dashboard-tab__content tab-content">
                            <div class="tab-pane fade show active" id="orders">
                                <div class="message-box mb--30 d-none">
                                    <p><i class="fa fa-check-circle"></i>سفارشی ثبت نشده است</p>
                                    <a href="/">لیست محصولات</a>
                                </div>
                                <div class="table-content table-responsive">
                                    <table class="table text-center">
                                        <thead>
                                            <tr>
                                                <th>کد سفارش</th>
                                                <th>تاریخ</th>
                                                <th>وضعیت</th>
                                                <th>جمع کل</th>
                                                <th>جزئیات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var order in Model.Orders)
                                            {
                                                <tr>
                                                    <td>@order.Code</td>
                                                    <td class="wide-column">@order.CreationDateStr</td>
                                                    <td>@order.OrderStatus.Title</td>
                                                    <td class="wide-column">@order.SubTotal</td>
                                                <td><a href="/orders/Details/@order.Code" class="btn btn-medium btn-style-1">جزئیات</a></td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

